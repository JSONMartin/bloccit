 <%#form_for [topic, post, comment=Comment.new], remote: true, html: { class: 'form-horizontal' } do |f| %>
 <%= form_for [topic, post, comment], remote: true do |f| %>
  <div class = "control-group">
    <%= f.label :body, class: 'control-label' %>
      <div class = "controls">
        <%= f.text_area :body, rows: 8 %>
      </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Save", class: 'btn' %>
    </div>
  </div>
<% end %>