<li>
  <div class="media">
    <%= link_to '#', class: 'pull-left' do %>
     <% if comment.user.avatar? %>
          <%= image_tag(comment.user.avatar.small.url) %>
      <% else %>
          <%= image_tag('http://www.admissionsdean.com/images/content/users/user_placeholder.png', size: "30x30") %>
      <% end %>
    <% end %>
    <div class = "media-body">
      <p>
        <%= comment.body %>
        <br />
        <small>
          <i>Created <%= time_ago_in_words(comment.created_at) %> ago by <b><%= "#{ comment.user.name } "%></b></i>
          <% if can? :destroy, comment %>
            | <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
          <% end %>
        </small>
      </p>
    </div>
  </div>
</li>