<h1><%= markdown @post.title %></h1>

<div class = "row">
  <div class = "span8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p>
      <%= image_tag(@post.post_image.url) if @post.post_image? %>
      <%= markdown @post.body %>
    </p>
    <div id = "comments">
      <h4><u>Comments</u></h4>
      <ol>
        <%= render @comments %>
      </ol>
      <% if can? :create, Comment %>
        <h4><u>Add New Comment</u></h4>
        <%= render partial: 'comments/form', locals: { topic: @topic, post: @post } %> 
      <% end %>
    </div>
  </div>
  <div class = "span4">  
    <% if can? :edit, @post %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-mini' %>
    <% end %>
  </div>
</div>