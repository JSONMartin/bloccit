<header>
  <div class="navbar">
    <div class="navbar-inner">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar glyph"></span>
            <span class="icon-bar glyph"></span>
            <span class="icon-bar glyph"></span>
        </a>
        <div class="container">
            <%= link_to "Bloccit", root_path, :class => "brand" %> 
            <div class="nav-collapse">
                <ul class="nav">
                  <li><%= link_to "Bloccit", root_path %></li>
                  <li><%= link_to "About", about_path %></li>
                  <li><%= link_to "Topics", topics_path %></li>
                  <li><%= link_to "Popular", posts_path %></li>
                  <li><%= link_to "Users", users_path %></li>
                </ul>
                <ul class="nav pull-right user-info">
                  <% if current_user %>
                    <%= image_tag(current_user.avatar.tiny.url) if current_user.avatar? %>
                    Hello <%= link_to (current_user.name || current_user.email), current_user %>!
                    <%= link_to edit_user_registration_path, class: 'btn btn-mini', style: 'margin-top: -5px;margin-left: 4px; margin-right: 2px;' do %>
                      <i class = "icon-user"> </i>
                    <% end %>
                    <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-mini', style: 'margin-top: -5px;margin-left: 2px;' do %>
                      <i class = "icon-share-alt"> </i>
                    <% end %>
                  <% else %>
                    <%= link_to "Sign In", new_user_session_path %> 
                    or
                    <%= link_to "Sign Up", new_user_registration_path %>
                  <% end %>
                </ul> 
            </div><!-- /.nav-collapse -->
        </div><!--/.container-->
    </div><!-- /navbar-inner -->
  </div>
</header>